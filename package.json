{
  "name": "centsible",
  "version": "0.12.0",
  "description": "Personal finance tracker",
  "author": "Arun",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "rebuild:node": "npm rebuild better-sqlite3",
    "rebuild:electron": "electron-rebuild -f -w better-sqlite3",
    "electron:dev": "npm run build && npm run electron:compile && electron .",
    "electron:build": "bash scripts/electron-build.sh mac",
    "electron:build:win": "bash scripts/electron-build.sh win",
    "electron:build:all": "bash scripts/electron-build.sh mac && bash scripts/electron-build.sh win",
    "release": "bash scripts/release.sh",
    "build:mobile": "mv src/app/api/transactions/\\[id\\] src/app/api/transactions/_id_disabled 2>/dev/null || true && BUILD_TARGET=mobile next build; mv src/app/api/transactions/_id_disabled src/app/api/transactions/\\[id\\] 2>/dev/null || true",
    "cap:sync": "npx cap sync",
    "cap:android": "npx cap open android",
    "cap:ios": "npx cap open ios",
    "cap:run:android": "npx cap run android",
    "cap:run:ios": "npx cap run ios",
    "mobile:android": "npm run build:mobile && npm run cap:sync android && npm run cap:run:android",
    "mobile:ios": "npm run build:mobile && npm run cap:sync ios && npm run cap:run:ios"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^8.0.0",
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^8.0.2",
    "@capacitor/filesystem": "^8.1.0",
    "@capacitor/ios": "^8.0.2",
    "ag-grid-community": "^35.0.1",
    "ag-grid-react": "^35.0.1",
    "better-sqlite3": "^12.6.2",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^40.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
